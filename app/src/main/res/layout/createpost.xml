<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.post.createPost">

    <CheckBox
        android:id="@+id/ogopogoCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:gravity="top"
        android:text="ogopogo"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tags2"
        app:layout_constraintTop_toTopOf="@+id/tags2" />

    <TextView
        android:id="@+id/tags2"
        android:layout_width="66dp"
        android:layout_height="44dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="304dp"
        android:text="Tags:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/sasquatchCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="top"
        android:text="sasquatch"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/ogopogoCheckBox"
        app:layout_constraintTop_toTopOf="@+id/ogopogoCheckBox" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startMap"
        android:layout_width="155dp"
        android:layout_height="61dp"
        android:layout_marginBottom="28dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextMultiLine2" />

    <Button
        android:id="@+id/startMap2"
        android:layout_width="155dp"
        android:layout_height="61dp"
        android:layout_marginBottom="28dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tags2" />

    <ImageButton
        android:id="@+id/SelectImage"
        android:layout_width="333dp"
        android:layout_height="179dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/tags2"
        app:layout_constraintTop_toBottomOf="@+id/ogopogoCheckBox"
        tools:src="@drawable/camera" />

    <EditText
        android:id="@+id/editTextTextMultiLine2"
        android:layout_width="333dp"
        android:layout_height="193dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#444444"
        android:backgroundTintMode="screen"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText" />

    <TextView
        android:id="@+id/locationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Location"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/SelectImage"
        app:layout_constraintTop_toBottomOf="@+id/SelectImage" />

    <Button
        android:id="@+id/Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:text="Location"
        app:layout_constraintEnd_toEndOf="@+id/SelectImage"
        app:layout_constraintTop_toBottomOf="@+id/SelectImage" />

</androidx.constraintlayout.widget.ConstraintLayout>